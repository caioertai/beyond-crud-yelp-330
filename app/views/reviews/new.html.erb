<h1>New Reviews</h1>

<% if @review.errors.any? %>
  <div class="errors-container">
    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%# POST /restaurants/42/reviews %>
<%= simple_form_for [@restaurant, @review] do |form| %>
  <%# Wrapper -> label, input %>
  <%= form.input :content %>

  <%= form.submit %>
<% end %>
